---
- hosts: webservers
  become:yes
  tasks:
    - name: install apache on webserver ubuntu
        apt:
            name: apache2
            state: present
    - name: run webserver
        service:
            name: apache2
            state: start
    - name: install apache on webserver linux
        yum: 
            name: apache2
            state: present
    - name: run webserver
        service:
            name: apache2
            state: start
    - name: install apache on webserver linux
        yum: 
            name: apache2
            state: present
    - name: run webserver
        service:
            name: apache2
            state: start